                        <div id="lstUserJobTitles" class="d-flex flex-column align-items-start"></div>
                    </div>
                </div>
                <div class="col-6 col-sm-9 pt-4 px-4">
                    <p class="font-weight-bold" id="userCount"></p>
                    <div id="lstUsers" class="list-group"></div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-4 px-5">
                <h6 class="font-weight-bold">Selected <small>(<span id="selectedUsersCount">0</span>)</small></h6>

                <div id="lstSelectedUsers" class="mt-3 list-group">
                </div>
            </div>
        </div>
    </div>
</div>

