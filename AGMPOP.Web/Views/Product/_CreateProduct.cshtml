     function getAllDept() {
        $('#DepartmentId').empty();
        $('#DepartmentId').append('<option value="" disabled>Select Department</option>');

        $.ajax({
            url: '@Url.Action("GetAllDepartments", "common")',
            method: 'GET',
            async: false,

            success: response => {
                console.log(response);
                if (response ) {
                    response.forEach(d => {
                        $('#DepartmentId').append(`<option value="${d.id}">${d.name}</option>`);
                    });
                }
            }
        });
    }


