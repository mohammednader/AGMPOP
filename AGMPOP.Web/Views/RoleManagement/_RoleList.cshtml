@model List<AGMPOP.Web.Models.RoleVM>

     <table id="tblRoles" class="table table-striped table-bordered table-responsive-md table-responsive-sm table-responsive-lg">
        <thead>
            <tr class="text-center">
                <th>Role</th>
                <th>Description</th>
                 <th>Created By</th>
                <th>Creation Date</th>
                <th>Last Modified By</th>
                <th>Last Modified Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Count > 0)
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];
                    <tr class="text-center">
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                         <td>@item.CreatedBy</td>
                        <td>@item.CreationDate</td>
                        <td>@item.LastModifiedBy</td>
                        <td>@item.LastModificationDate</td>
                        <td class="text-center">

                            <button class="material-tooltip-main btn btn-primary btn-floating my-0 p-0" data-toggle="tooltip" title="Edit" >

                                <a href="@Url.Action("UpdateRole", new { Id = item.Id })" class="btn btn-link text-dark px-2">
                                    <i class="fas fa-edit" style="font-size:15px; margin-top:-11px !important; "></i>
                                </a>
                            </button>




                            <button class="material-tooltip-main btn btn-danger btn-floating my-0 p-0" data-toggle="tooltip" title="delete" onclick="deleteRole(@item.Id)">
                                <i class="fa fa-trash-alt" style="font-size:15px; margin-top:-5px;"></i>
                            </button>

                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">No roles found</td>
                </tr>
            }
        </tbody>
    </table>
 
<script>
    $(document).ready(function () {
        $("#tblRoles").DataTable();
            $(function () {
        $('.material-tooltip-main').tooltip();
    })
    })
</script>