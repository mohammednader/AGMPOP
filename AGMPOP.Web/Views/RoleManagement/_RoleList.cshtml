@model List<AGMPOP.Web.Models.RoleVM>

     <table id="tblRoles" class="table table-striped table-responsive-sm ">
        <thead>
            <tr>
                <th>Role Name</th>
                <th>Description</th>
                <th>Created By</th>
                <th>Creation Date</th>
                <th>Last Modified By</th>
                <th>Last Modified Date</th>
                <th data-sortable="false" class="text-center" width="100">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Count > 0)
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];
                    <tr >
                        <td><b>@item.Name</b></td>
                        <td>@item.Description</td>
                         <td>@item.CreatedBy</td>
                        <td>@item.CreationDate</td>
                        <td>@item.LastModifiedBy</td>
                        <td>@item.LastModificationDate</td>
                        <td class="text-center">

                            <button class="material-tooltip-main btn-floating btn-primary btn-sm " data-toggle="tooltip" title="Edit" >
                                <a href="@Url.Action("UpdateRole", new { Id = item.Id })" class="btn-link" >
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                            </button>
                            <button class="material-tooltip-main btn-floating btn-danger btn-sm " data-toggle="tooltip" title="Delete" onclick="deleteRole(@item.Id)">
                                <i class="fa fa-trash-alt"></i>
                            </button>

                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">No roles found</td>
                </tr>
            }
        </tbody>
    </table>
 
<script>
    $(document).ready(function () {
        $("#tblRoles").DataTable({
            "autoWidth": false
        });
            $(function () {
        $('.material-tooltip-main').tooltip();
    })
    })
</script>